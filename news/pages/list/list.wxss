.news{
	width: 100%;
	margin-top:20rpx;
}
.new{
	width: 90%;
	height: 200rpx;
	margin: 0 auto;
	margin-top:50rpx;
	box-sizing:border-box;
	border-top:1rpx solid #eee;
	padding: 50rpx 25rpx;
	position: relative;
	font:18px/50rpx "Araly";
	padding-right:260rpx;
	color:#444;
}
.img{
	position: absolute;
	height: 200rpx;
	width: 200rpx;
	right:30rpx;
	top:30rpx;
	background-position: center center;
	background-size: cover;
	background-repeat: no-repeat;
	background: red;
}
.navs{
	width: 100%;
	height: 100%;
	position: fixed;
	left: 0;
	top:0;
	transform:translateX(-100%);
}
.nav{
	width: 40%;
	height: 60rpx;
	font:18px/52px "微软雅黑";
	opacity: 1;
	background: #d20000;
	text-align: center;
	height: 8.33333333333333333%;
	position: relative;
	z-index: 10;
	color:#fff;
}
.mark{
	width: 100%;
	height:100%;
	position: absolute;
	top:0;
	left: 0;
	z-index: 0;
	background: #000;
	opacity: .6;
}
.menu{
	width: 100rpx;
	height: 100rpx;
	position: fixed;
	right: 100rpx;
	bottom:100rpx;
	border-radius: 50%;
	background: #000;
	color:#eee;
	font:16px/100rpx "微软雅黑";
	text-align: center;
	opacity: .6;
	z-index: 20;
}

