.block .img{
	width: 100%;
	height: 300rpx;
	background-position: center;
	background-size: cover;
	background-repeat: no-repeat;
}
.news{
	width: 100%;
	margin-top:20rpx;
}
.new{
	width: 90%;
	margin: 0 auto;
	margin-bottom:30rpx;
	box-sizing:border-box;
	border-top:1rpx solid #eee;
	padding: 20rpx 25rpx;
	position: relative;
	font:18px/50rpx "Araly";
	color:#444;
	padding-right:200rpx;
	position: relative;
}
.new .img{
	position: absolute;
	width: 100rpx;
	height: 100rpx;
	right: 30rpx;
	bottom:0;
	top:0;
	margin: auto;
	background-position: center;
	background-size: cover;
	background-repeat: no-repeat;
	background: #29a6dc;
}
.oucter{
	width: 100%;
	box-sizing:border-box;
	height: 200rpx;
	padding: 20rpx 30rpx;
	margin-top:50rpx;
	position: relative;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
	font:18px/25px "Araly";
	margin-bottom: 50rpx;
}
.oucter .dp{
	width: 100%;
	font:22px/25px "微软雅黑";
	text-align: center;
}
.oucter .zz{
	width: 100%;
	overflow: hidden;
	padding: 0 30rpx;
	position: absolute;
	right:0;
	bottom: 0;
}
.oucter .ator{
	float: right;
	margin-left: 30rpx;
	bottom:0;
}
.oucter .img{
	float: right;
	height: 50rpx;
	width: 50rpx;
	right:170rpx;
	bottom:0;
	background-position: center;
	background-size: 25px 25px;
	background-repeat: no-repeat;
	background: red;
}