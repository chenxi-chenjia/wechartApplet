.box{
	width: 100%;
	margin-bottom:50rpx;
}
.comment{
	width: 100%;
	padding: 30rpx;
	text-indent: 2rem;
	font:18px/30px "Array";
	margin-bottom: 50rpx;
	box-sizing: border-box;
	border-bottom: 1rpx solid #eee;
}
.bottom{
	width: 100%;
	position: relative;
	right:0;
	bottom:0;
	padding-right:150rpx;
	line-height: 50rpx;	
	text-align: right;
	padding: 50rpx 150rpx;
	box-sizing: border-box;
}
.head{
	position: absolute;
	width: 70rpx;
	height: 70rpx;
	border-radius: 50%;
	background:blue;
	top: 0;
	bottom: 0;
	right: 30rpx;
	margin: auto;
}
.shot .comment{
	text-indent: 0;
}