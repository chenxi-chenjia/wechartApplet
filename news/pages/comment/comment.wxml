<view class="long box">
	<view class="comment" wx:for="{{long}}">
		<view class="content">
			{{item.content}}
		</view>
		<view class="bottom">
			<image class="head" mode="aspectFit" src="{{item.avatar}}"></image>
			{{item.author}}
		</view>
		
	</view>
</view>
<view class="shot box">
	<view class="comment" wx:for="{{short}}">
		<view class="content">
			{{item.content}}
		</view>
		<view class="bottom">
			<image class="head" mode="aspectFit" src="{{item.avatar}}"></image>
			{{item.author}}
		</view>
		
	</view>
</view>